#!/usr/bin/make -f
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k

	dh_installdirs
	cp check-ftp-password `pwd`/debian/bytemark-vhost-ftpd/usr/sbin
	chmod 755 `pwd`/debian/bytemark-vhost-ftpd/usr/sbin/check-ftp-password
	mkdir -p `pwd`/debian/bytemark-vhost-ftpd/etc/firewall/patterns.d/
	cp patterns.d/* `pwd`/debian/bytemark-vhost-ftpd/etc/firewall/patterns.d/

# Build architecture-dependent files here.
binary-arch: build install
# We have nothing to do by default.

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installdocs
	dh_installinit --name=pure-authd
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
