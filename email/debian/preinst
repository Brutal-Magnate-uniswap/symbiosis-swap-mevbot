#!/bin/sh

set -e

# 
# Move the old bytemark-vhost.d directories into their new positions.
#
if [ -d /etc/exim4/bytemark-vhost.d ] ; then
  cp -au /etc/exim4/bytemark-vhost.d /etc/exim4/symbiosis.d
  rm -rf /etc/exim4/bytemark-vhost.d
fi

if [ -d /etc/dovecot/bytemark-vhost.d ] ; then
  cp -au /etc/dovecot/bytemark-vhost.d /etc/dovecot/symbiosis.d
  rm -rf /etc/dovecot/bytemark-vhost.d
fi


#DEBHELPER#

exit 0
